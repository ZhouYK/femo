{
  "compilerOptions": {
    "experimentalDecorators": false,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext", // https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": false,
    "outDir": "",
    "jsx": "react",
    "strict": true,
    "rootDir": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["../node_modules/@types", "../typings"]
  },
  "include":["../typings", "../index.d.ts", "../test"]
}
