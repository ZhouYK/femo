{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": false,
    "outDir": "",
    "jsx": "react",
    "strict": true,
    "rootDir": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "exclude": ["node_modules", "dist", "html", "config", "scripts"]
}
